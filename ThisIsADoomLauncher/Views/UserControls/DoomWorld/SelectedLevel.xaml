<UserControl x:Class="Views.UserControls.DoomWorld.SelectedLevel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThisIsADoomLauncher">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="Run" x:Key="RunBold">
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <!-- Level selected : Level infos -->
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="{Binding Title}" 
                       HorizontalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"/>

            <Border BorderBrush="#2986CC" BorderThickness="1" CornerRadius="7" Margin="20" Padding="15">
                <StackPanel Orientation="Horizontal">

                    <!--<Border CornerRadius="7" BorderThickness="1">
                        <Button Margin="10,0"
                            Height="75"
                            Padding="15"
                            Background="#2986CC">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="pack://application:,,,/Resources/Images/doomworld_dl.png"/>
                                <TextBlock Text="Download" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>-->

                    <!--<TextBlock Margin="10,0"
                                   Height="40"
                                   Width="40">
                        <Hyperlink TextDecorations="None">
                            <Image Source="pack://application:,,,/Resources/Images/doomworld_dl.png"
                                   >
                            </Image>
                        </Hyperlink>
                    </TextBlock>-->
                    
                    <Image Source="pack://application:,,,/Resources/Images/doomworld_dl.png"
                       Margin="10,0"
                       Height="25"
                       Width="25">
                    </Image>


                    <StackPanel Margin="20,0">
                        <TextBlock>
                        <Run Text="Filename :" Style="{StaticResource ResourceKey=RunBold}"/>
                        <Run Text="{Binding Filename}"/>
                        </TextBlock>
                        <TextBlock>
                        <Run Text="Size :" Style="{StaticResource ResourceKey=RunBold}"/>
                        <Run Text="{Binding Size}"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>

            <TextBlock>
            <Run Text="Release date:" Style="{StaticResource ResourceKey=RunBold}"/>
            <Run Text="{Binding ReleaseDate}"/>
            </TextBlock>
            <TextBlock>
            <Run Text="Author:" Style="{StaticResource ResourceKey=RunBold}"/>
            <Run Text="{Binding Author}"/>
            </TextBlock>
            <TextBlock>
            <Run Text="Description:" Style="{StaticResource ResourceKey=RunBold}"/>
            <Run Text="{Binding Description}" />
            </TextBlock>
            <TextBlock>
            <Run Text="Credits:" Style="{StaticResource ResourceKey=RunBold}"/>
            <Run Text="{Binding Credits}"/>
            </TextBlock>
            <TextBlock>
            <Run Text="Base:" Style="{StaticResource ResourceKey=RunBold}"/>
            <Run Text="{Binding Base}"/>
            </TextBlock>
            <TextBlock>
            <Run Text="Build time:" Style="{StaticResource ResourceKey=RunBold}"/>
            <Run Text="{Binding Buildtime}"/>
            </TextBlock>
            <TextBlock>
            <Run Text="Editors:" Style="{StaticResource ResourceKey=RunBold}"/>
            <Run Text="{Binding Editors}"/>
            </TextBlock>
            <TextBlock>
            <Run Text="Iggamesurl:" Style="{StaticResource ResourceKey=RunBold}"/>
            <Run Text="{Binding Idgamesurl}"/>
            </TextBlock>
            <TextBlock>
            <Run Text="Bugs:" Style="{StaticResource ResourceKey=RunBold}"/>
            <Run Text="{Binding Bugs}"/>
            </TextBlock>
            <TextBlock>
            <Run Text="Ratings:" Style="{StaticResource ResourceKey=RunBold}"/>
            <Run Text="{Binding Ratings}"/>
            </TextBlock>
            <TextBlock>
            <Run Text="Text file:" Style="{StaticResource ResourceKey=RunBold}"/>
            <Run Text="{Binding Textfile}"/>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
    <!-- End Level selected : Level infos -->
</UserControl>
