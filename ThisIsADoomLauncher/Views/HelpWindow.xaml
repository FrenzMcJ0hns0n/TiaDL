<Window x:Class="Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThisIsADoomLauncher"
        mc:Ignorable="d"
        
        Title="Help / About" 
        Height="840" Width="550"
        
        FontSize="14"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>

        <Style x:Key="Prg_Title" TargetType="{x:Type Paragraph}">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
        </Style>
        
        <Style x:Key="List_Examples" TargetType="{x:Type List}">
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Margin" Value="0 14 0 28"/>
            <Setter Property="MarkerStyle" Value="Box"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Margin="16">
            <ScrollViewer>
                <RichTextBox BorderThickness="0" Cursor="Arrow" IsReadOnly="True" Margin="8">

                    <FlowDocument>
                        <Section>
                            <Paragraph Style="{StaticResource Prg_Title}">Files</Paragraph>
                            <Paragraph>
                                The main types of file you need to play Doom.
                            </Paragraph>
                            <List>

                                <ListItem>
                                    <Paragraph FontWeight="DemiBold">Iwad</Paragraph>
                                    <Paragraph>
                                        Base game data.
                                        <LineBreak /> 
                                        Can be official or community releases.
                                        <LineBreak /> 
                                        File extension : .wad
                                        <LineBreak /> 
                                        Examples :
                                    </Paragraph>
                                    <List Style="{StaticResource List_Examples}">
                                        <ListItem>
                                            <Paragraph>Doom.wad</Paragraph>
                                        </ListItem>
                                        <ListItem>
                                            <Paragraph>Doom2.wad</Paragraph>
                                        </ListItem>
                                        <ListItem>
                                            <Paragraph>TNT.WAD</Paragraph>
                                        </ListItem>
                                        <ListItem>
                                            <Paragraph>freedoom1.wad</Paragraph>
                                        </ListItem>
                                    </List>
                                </ListItem>

                                <ListItem>
                                    <Paragraph FontWeight="DemiBold">Level</Paragraph>
                                    <Paragraph>
                                        Pack of levels, designed by the community.
                                        <LineBreak /> 
                                        Needs IWAD resources to be played.
                                        <LineBreak /> 
                                        File extension : .wad, .pk3
                                        <LineBreak /> 
                                        Examples :
                                    </Paragraph>
                                    <List Style="{StaticResource List_Examples}">
                                        <ListItem>
                                            <Paragraph>ICARUS.wad</Paragraph>
                                        </ListItem>
                                        <ListItem>
                                            <Paragraph>Requiem.wad</Paragraph>
                                        </ListItem>
                                        <ListItem>
                                            <Paragraph>DTS-T.pk3</Paragraph>
                                        </ListItem>
                                    </List>
                                </ListItem>

                                <ListItem>
                                    <Paragraph FontWeight="DemiBold">Misc.</Paragraph>
                                    <Paragraph>
                                        Additional file for levels or mods, not mandatory.
                                        <LineBreak />
                                        File extension : .deh, .bex
                                    </Paragraph>
                                </ListItem>

                            </List>
                        </Section>

                        <Section>
                            <Paragraph Style="{StaticResource Prg_Title}">Ports</Paragraph>
                            <Paragraph>
                                Softwares designed to run Doom on nowadays computers.
                                <LineBreak />
                                <LineBreak />
                                Extend/Improve features of the original game, such as : graphics, framerate, mod support, multiplayer, etc.
                                <LineBreak />
                                Examples of Doom ports :
                            </Paragraph>
                            <List Style="{StaticResource List_Examples}">
                                <ListItem>
                                    <Paragraph>Chocolate Doom</Paragraph>
                                </ListItem>
                                <ListItem>
                                    <Paragraph FontWeight="DemiBold">GZDoom</Paragraph>
                                </ListItem>
                                <ListItem>
                                    <Paragraph>PrBoom+</Paragraph>
                                </ListItem>
                                <ListItem>
                                    <Paragraph>Zandronum</Paragraph>
                                </ListItem>
                                
                            </List>
                            <Paragraph>
                                GZDoom is the recommended port to use with TiaDL.
                            </Paragraph>
                        </Section>

                        <Section>
                            <Paragraph Style="{StaticResource Prg_Title}">Keys</Paragraph>
                            <Paragraph>
                                To use in-game (AZERTY keyboard layout) :
                            </Paragraph>
                            <List Margin="0 14 0 28" MarkerStyle="Box">

                                <ListItem>
                                    <Paragraph>System</Paragraph>
                                    <List Margin="0 0 0 6" Foreground="Gray" MarkerStyle="Box">
                                        <ListItem>
                                            <Paragraph>Quick save :
                                                <Bold>F6</Bold>
                                            </Paragraph>
                                        </ListItem>
                                        <ListItem>
                                            <Paragraph>Jump to map n :
                                                <Bold>idclev n</Bold>
                                            </Paragraph>
                                        </ListItem>
                                    </List>
                                </ListItem>

                                <ListItem>
                                    <Paragraph>Screen size</Paragraph>
                                    <List Margin="0 0 0 6" Foreground="Gray" MarkerStyle="Box">
                                        <ListItem>
                                            <Paragraph>Increase screen size :
                                                <Bold>)</Bold>
                                            </Paragraph>
                                        </ListItem>
                                        <ListItem>
                                            <Paragraph>Decrease screen size :
                                                <Bold>=</Bold>
                                            </Paragraph>
                                        </ListItem>
                                    </List>
                                </ListItem>

                                <ListItem>
                                    <Paragraph>Cheat codes</Paragraph>
                                    <List Margin="0 0 0 6" Foreground="Gray" MarkerStyle="Box">
                                        <ListItem>
                                            <Paragraph>Invincibility :
                                                <Bold>iddad</Bold>
                                            </Paragraph>
                                        </ListItem>
                                        <ListItem>
                                            <Paragraph>Maximum ammo :
                                                <Bold>idkfq</Bold>
                                            </Paragraph>
                                        </ListItem>
                                        <ListItem>
                                            <Paragraph>Toggle collisions on/off :
                                                <Bold>idclip</Bold>
                                            </Paragraph>
                                        </ListItem>
                                    </List>
                                </ListItem>

                            </List>
                        </Section>
                        
                        <Section>
                            <Paragraph Style="{StaticResource Prg_Title}">User presets</Paragraph>
                            <Paragraph>
                                Set your own Iwad + Level combinations from the <Bold>Add new preset</Bold> tab.
                                <LineBreak />
                                Then access them on the <Bold>User presets</Bold> tab.
                                <LineBreak />
                                <LineBreak />
                                To delete a preset, just right-click on it.
                            </Paragraph>
                        </Section>
                    </FlowDocument>

                </RichTextBox>
            </ScrollViewer>
        </Border>
        
    </Grid>
</Window>
