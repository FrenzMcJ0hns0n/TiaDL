<Window x:Class="Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThisIsADoomLauncher"
        mc:Ignorable="d"
        
        Title="This is a Doom Launcher v3" 
        Width="1200" Height="980" 
        ResizeMode="CanMinimize"
        Loaded="Window_Loaded">

    <Grid>
        <TabControl>
            <TabItem Name="v3" Header="TiaDL v3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="5*" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="17*" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="10*" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="7*" />
                        <RowDefinition Height="20" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="12*" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>
                    
                    <GroupBox Grid.Row="1"
                              Grid.Column="1"
                              Header="Port">
                        <Grid Margin="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*" />
                                <RowDefinition Height="2*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>

                            <TextBox 
                                x:Name="TextBox_Port"
                                Grid.Column="0"
                                Margin="0,0,0,1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Foreground="Gray"
                                FontStyle="Italic"
                                Text="Drop Doom port .exe file here... (GZDoom, Zandronum, etc.)"
                                Cursor="Arrow"
                                IsReadOnly="True"
                                AllowDrop="True"
                                PreviewDragOver="TextBox_Port_PreviewDragOver"
                                Drop="TextBox_Port_Drop"
                                TextWrapping="Wrap"
                                />
                            <Grid Grid.Row="0"
                                  Grid.Column="1"
                                  Margin="0,0,0,1"
                                  >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>
                                <Button 
                                    x:Name="Button_Port_Browse"
                                    Grid.Row="0"
                                    VerticalAlignment="Top"
                                    Margin="0,0,0,-1"
                                    Content="Browse..."
                                    />
                                <Button 
                                    x:Name="Button_Port_Clear"
                                    Grid.Row="1"
                                    VerticalAlignment="Bottom"
                                    Content="Clear &#x21ba;"
                                    />
                            </Grid>
                            <StackPanel x:Name="StackPanel_EngineParams"
                                        Grid.Row="1"
                                        Orientation="Horizontal"/>
                            <TextBox x:Name="TextBox_PortParameters"
                                     Grid.Row="1"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Text="+ 0 parameters"
                                     Cursor="Arrow"
                                     IsReadOnly="True"/>
                            <Button x:Name="Button_EngineParams_Edit"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Content="Edit..."/>
                        </Grid>
                    </GroupBox>

                    <!-- Levels -->
                    <GroupBox x:Name="GroupBox_Levels"
                              Grid.Row="3"
                              Grid.Column="1"
                              Header="Levels"
                              AllowDrop="True"
                              PreviewDragOver="GroupBox_Levels_PreviewDragOver"
                              Drop="GroupBox_Levels_Drop">
                        <Grid>
                            <TabControl x:Name="TabControl_Levels" Margin="8">
                                <!-- Add Name ? -->
                                <TabItem Header="Base presets">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="10" />
                                            <RowDefinition Height="5*" />
                                            <RowDefinition Height="10" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="10" />
                                            <ColumnDefinition Width="8*" />
                                            <ColumnDefinition Width="10" />
                                            <ColumnDefinition Width="14*" />
                                            <ColumnDefinition Width="10" />
                                        </Grid.ColumnDefinitions>

                                        <ListView 
                                            x:Name="ListView_Levels_BasePresets"
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Grid.RowSpan="3"
                                            Grid.ColumnSpan="2"
                                            Margin="-3"
                                            SelectionChanged="ListView_Levels_BasePresets_SelectionChanged"
                                            >
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image 
                                                            Source="{Binding ImagePath,Converter={StaticResource ImgConverter}}"
                                                            Margin="-3,0,0,0"
                                                            Height="52"
                                                            />
                                                        <TextBlock
                                                            Margin="8,0,0,0"
                                                            VerticalAlignment="Center"
                                                            FontWeight="DemiBold"
                                                            FontSize="16"
                                                            Text="{Binding Name}"
                                                            />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>

                                        <Grid
                                            Grid.Row="1"
                                            Grid.Column="3">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="10" />
                                                <RowDefinition Height="4*" />
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="10" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="10" />
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="7*" />
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="10" />
                                            </Grid.ColumnDefinitions>
                                            <Image
                                                x:Name="Image_Levels_BasePresets"
                                                Grid.Row="1"
                                                Grid.Column="3"
                                                />
                                            <Label 
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Content="Iwad :"
                                                />
                                            <TextBox
                                                x:Name="TextBox_Levels_BasePresets_Iwad"
                                                Grid.Row="2"
                                                Grid.Column="2"
                                                Grid.ColumnSpan="2"
                                                VerticalAlignment="Center"
                                                Margin="0,1,0,0"
                                                Cursor="Arrow"
                                                IsReadOnly="True"
                                                />
                                            <Label 
                                                Grid.Row="3"
                                                Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Content="Level :"
                                                />
                                            <TextBox
                                                x:Name="TextBox_Levels_BasePresets_Level"
                                                Grid.Row="3"
                                                Grid.Column="2"
                                                Grid.ColumnSpan="2"
                                                VerticalAlignment="Center"
                                                Margin="0,1,0,0"
                                                Cursor="Arrow"
                                                IsReadOnly="True"
                                                />
                                            <Label 
                                                Grid.Row="4"
                                                Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Content="Misc :"
                                                />
                                            <TextBox
                                                x:Name="TextBox_Levels_BasePresets_Misc"
                                                Grid.Row="4"
                                                Grid.Column="2"
                                                Grid.ColumnSpan="2"
                                                VerticalAlignment="Center"
                                                Margin="0,1,0,0"
                                                Cursor="Arrow"
                                                IsReadOnly="True"
                                                />
                                        </Grid>
                                        

                                    </Grid>
                                </TabItem>
                                <TabItem Header="User presets">
                                    <Grid>
                                        <Label x:Name="Label_Levels_NoUserPresets"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="20"
                                               Foreground="Gray"
                                               Content="No user presets found"/>
                                        <ListView x:Name="ListView_Levels_UserPresets"
                                                  SelectionChanged="ListView_Levels_UserPresets_SelectionChanged"
                                                  Margin="-3"
                                                  Visibility="Collapsed">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Grid>
                                </TabItem>
                                <TabItem Header="Add new preset">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="3*"/>
                                            <RowDefinition Height="1*"/>
                                            <RowDefinition Height="3*"/>
                                            <RowDefinition Height="1*"/>
                                            <RowDefinition Height="3*"/>
                                            <RowDefinition Height="1*"/>
                                            <RowDefinition Height="3*"/>
                                            <RowDefinition Height="1*"/>
                                            <RowDefinition Height="3*"/>
                                            <RowDefinition Height="20"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="12*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="20"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Label Grid.Row="1"
                                               Grid.Column="1"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Content="Iwad :"/>
                                        <TextBox 
                                            x:Name="TextBox_NewLevel_Iwad"
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Cursor="Arrow"
                                            IsReadOnly="True"
                                            FontStyle="Italic"
                                            Foreground="Gray"
                                            Text="Drop an IWAD file here..."
                                            AllowDrop="True"
                                            PreviewDragOver="TextBox_NewLevel_Iwad_PreviewDragOver"
                                            Drop="TextBox_NewLevel_Iwad_Drop"
                                            />
                                        <Button Grid.Row="1" 
                                                Grid.Column="3"
                                                VerticalAlignment="Top" 
                                                Content="Browse..."/>
                                        <!--<Button Grid.Row="1" 
                                                Grid.Column="3"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center" 
                                                Content="->"/>-->
                                        <Button 
                                            x:Name="Button_NewLevel_Iwad_Clear"
                                            Grid.Row="1" 
                                            Grid.Column="3"
                                            VerticalAlignment="Bottom" 
                                            Content="Clear &#x21ba;"
                                            
                                            />

                                        <Label Grid.Row="3"
                                               Grid.Column="1"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Content="Level :"/>
                                        <TextBox x:Name="TextBox_NewLevel_Level"
                                                 Grid.Row="3" 
                                                 Grid.Column="2"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch"
                                                 HorizontalContentAlignment="Center"
                                                 VerticalContentAlignment="Center"
                                                 Cursor="Arrow"
                                                 IsReadOnly="True"
                                                 FontStyle="Italic"
                                                 Foreground="Gray"
                                                 Text="Drop a .wad/.pk3 file here..."
                                                 AllowDrop="True"
                                                 PreviewDragOver="TextBox_NewLevel_Level_PreviewDragOver"
                                                 Drop="TextBox_NewLevel_Level_Drop"
                                                 />
                                        <Button Grid.Row="3" 
                                                Grid.Column="3"
                                                VerticalAlignment="Top" 
                                                Content="Browse..."/>
                                        <!--<Button Grid.Row="3" 
                                                Grid.Column="3"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center" 
                                                Content="->"/>-->
                                        <Button 
                                            x:Name="Button_NewLevel_Level_Clear"
                                            Grid.Row="3"
                                            Grid.Column="3"
                                            VerticalAlignment="Bottom"
                                            Content="Clear &#x21ba;"
                                            />
                                        
                                        <Label Grid.Row="5"
                                               Grid.Column="1"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Content="Misc. :"/>
                                        <TextBox x:Name="TextBox_NewLevel_Misc"
                                                 Grid.Row="5" 
                                                 Grid.Column="2"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch"
                                                 HorizontalContentAlignment="Center"
                                                 VerticalContentAlignment="Center"
                                                 Cursor="Arrow"
                                                 IsReadOnly="True"
                                                 FontStyle="Italic"
                                                 Foreground="Gray"
                                                 Text="Drop a .deh/.bex file here..."
                                                 AllowDrop="True"
                                                 PreviewDragOver="TextBox_NewLevel_Misc_PreviewDragOver"
                                                 Drop="TextBox_NewLevel_Misc_Drop"
                                                 />
                                        <Button Grid.Row="5" 
                                                Grid.Column="3"
                                                VerticalAlignment="Top" 
                                                Content="Browse..."/>
                                        <!--<Button Grid.Row="5" 
                                                Grid.Column="3"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center" 
                                                Content="->"/>-->
                                        <Button 
                                            x:Name="Button_NewLevel_Misc_Clear"
                                            Grid.Row="5"
                                            Grid.Column="3"
                                            VerticalAlignment="Bottom"
                                            Content="Clear &#x21ba;"
                                            />

                                        <Label Grid.Row="7"
                                               Grid.Column="1"
                                               Grid.ColumnSpan="2"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Content="Image :"/>
                                        <!--<TextBox Grid.Row="7" 
                                                 Grid.Column="2"
                                                 Margin="50,0,50,0"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch"
                                                 HorizontalContentAlignment="Center"
                                                 VerticalContentAlignment="Center"
                                                 FontStyle="Italic"
                                                 Foreground="Gray"
                                                 Text="Enter preset name..."/>-->
                                        <TextBox 
                                            x:Name="TextBox_NewLevel_Image"
                                            Grid.Row="7" 
                                            Grid.Column="2"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Cursor="Arrow"
                                            IsReadOnly="True"
                                            FontStyle="Italic"
                                            Foreground="Gray"
                                            Text="Drop a .jpg/.png file here..."
                                            AllowDrop="True"
                                            PreviewDragOver="TextBox_NewLevel_Image_PreviewDragOver"
                                            Drop="TextBox_NewLevel_Image_Drop"     
                                            />
                                        <Button Grid.Row="7" 
                                                Grid.Column="3"
                                                VerticalAlignment="Top" 
                                                Content="Browse..."/>
                                        <!--<Button Grid.Row="7" 
                                                Grid.Column="3"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center" 
                                                Content="->"/>-->
                                        <Button 
                                            x:Name="Button_NewLevel_Image_Clear"
                                            Grid.Row="7"
                                            Grid.Column="3"
                                            VerticalAlignment="Bottom"
                                            Content="Clear &#x21ba;"
                                            />

                                        <Label Grid.Row="9"
                                               Grid.Column="1"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Content="Options :"/>
                                        <Grid Grid.Row="9"
                                              Grid.Column="2"
                                              Margin="150,0,150,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>

                                            <Button 
                                                x:Name="Button_NewLevel_Try" 
                                                Grid.Column="0"
                                                Margin="6,0,6,0"
                                                FontSize="13"
                                                Content="Try  &#x2193;"
                                                Click="Button_NewLevel_Try_Click"
                                                />
                                            <Button 
                                                x:Name="Button_NewLevel_SaveAs"
                                                Grid.Column="1"
                                                Margin="6,0,6,0"
                                                FontSize="13"
                                                Content="Save as...  &#x1f5ab;"
                                                Click="Button_NewLevel_SaveAs_Click"
                                                />
                                            <Button 
                                                x:Name="Button_NewLevel_ClearAll"
                                                Grid.Column="2"
                                                Margin="6,0,6,0"
                                                FontSize="13"
                                                Content="Clear all  &#x21ba;"
                                                Click="Button_NewLevel_ClearAll_Click"
                                                />

                                        </Grid>
                                    </Grid>
                                    
                                </TabItem>
                            </TabControl>

                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="5"
                              Grid.Column="1"
                              Header="Mods">
                        <Grid Margin="8">
                            <TabControl>
                                <TabItem Header="Base presets">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="10" />
                                            <RowDefinition Height="2*" />
                                            <RowDefinition Height="7*" />
                                            <RowDefinition Height="10" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="10" />
                                            <ColumnDefinition Width="8*" />
                                            <ColumnDefinition Width="10" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="10" />
                                            <ColumnDefinition Width="15*" />
                                            <ColumnDefinition Width="10" />
                                        </Grid.ColumnDefinitions>
                                        <ListView 
                                            x:Name="ListView_Mods_BasePresets"
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Grid.RowSpan="4"
                                            Grid.ColumnSpan="2"
                                            Margin="-3"
                                            SelectionChanged="ListView_Mods_BasePresets_SelectionChanged"
                                            >
                                            <!-- Use templates to bind -->
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <!--<StackPanel
                                                        x:Name="StackPanel_Mods"
                                                        Orientation="Vertical"
                                                        >-->
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontWeight="DemiBold"
                                                            FontSize="12"
                                                            Text="{Binding Name}"
                                                            />
                                                    <!--</StackPanel>-->
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                        <Label 
                                            x:Name="Label_Mods_Desc"
                                            Grid.Row="1"
                                            Grid.Column="3"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="0,-4,0,0"
                                            Content="Description :"
                                            />
                                        <TextBlock
                                            x:Name="TextBlock_Mods_Desc"
                                            Grid.Row="1"
                                            Grid.Column="5"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            Margin="7,-1,0,0"
                                            FontWeight="DemiBold"
                                            />

                                        <Label 
                                            x:Name="Label_Mods_Files"
                                            Grid.Row="2"
                                            Grid.Column="3"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Margin="0,-2,0,0"
                                            Content="Mod files :"
                                            />
                                        <ListView
                                            x:Name="ListView_Mods_Files"
                                            Grid.Row="2"
                                            Grid.Column="5"
                                            FontSize="11"
                                            >
                                        </ListView>
                                    </Grid>
                                </TabItem>
                                <TabItem Header="User presets">
                                    <Grid>
                                        <Label x:Name="Label_Mods_NoUserPresets"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="20"
                                               Foreground="Gray"
                                               Content="No user presets found"/>
                                    </Grid>
                                </TabItem>
                                <TabItem Header="Add new preset">

                                </TabItem>
                            </TabControl>
                            <!--<Grid.RowDefinitions>
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="18*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Border BorderThickness="1"
                                    BorderBrush="DarkGray">
                                <StackPanel x:Name="StackPanel_Mods"
                                        Orientation="Horizontal">

                                </StackPanel>
                            </Border>
                            <Button x:Name="Button_ModInfo"
                                    Grid.Column="1"
                                    Content="Get more info..."/>
                            <Border Grid.Row="1"
                                    BorderThickness="1"
                                    BorderBrush="DarkGray">
                                
                            </Border>-->
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="7"
                              Grid.Column="1"
                              Header="Summary">
                        <Grid>
                            <Grid x:Name="Grid_Summary_Params" Visibility="Visible">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="10" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="15*" />
                                    <ColumnDefinition Width="10" />
                                </Grid.ColumnDefinitions>

                                <Label Grid.Row="1" 
                                   Grid.Column="1" 
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Content="Port :"/>
                                <TextBox 
                                    x:Name="TextBox_Summary_Port" 
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Margin="0,1,0,0"
                                    Cursor="Arrow"
                                    IsReadOnly="True"
                                    AllowDrop="False"
                                    />

                                <Label Grid.Row="2" 
                                   Grid.Column="1" 
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Content="Params :"/>
                                <StackPanel 
                                    x:Name="StackPanel_Summary_PortParams"
                                    Grid.Row="4" 
                                    Grid.Column="2"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Margin="0,1,0,0"
                                    Orientation="Horizontal"
                                    />
                                <!--<TextBox Grid.Row="2" 
                                     Grid.Column="2"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Center"
                                     Margin="0,1,0,0"
                                     Cursor="Arrow"
                                     IsReadOnly="True"/>-->

                                <Label Grid.Row="3" 
                                   Grid.Column="1" 
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Content="Iwad :"/>
                                <TextBox
                                    x:Name="TextBox_Summary_Iwad"
                                    Grid.Row="3" 
                                    Grid.Column="2"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Margin="0,1,0,0"
                                    Cursor="Arrow"
                                    IsReadOnly="True"
                                    />

                                <Label Grid.Row="4" 
                                   Grid.Column="1" 
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Content="File(s) :"/>

                                <StackPanel 
                                    x:Name="StackPanel_Summary_FilesMods"
                                    Grid.Row="4" 
                                    Grid.Column="2"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Margin="0,1,0,0"
                                    Orientation="Horizontal"
                                    />

                                <TextBox 
                                    x:Name="TextBox_Summary_FilesMods" 
                                    Grid.Row="4" 
                                    Grid.Column="2"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Margin="0,1,0,0"
                                    Cursor="Arrow"
                                    IsReadOnly="True"
                                    Visibility="Collapsed"
                                    />
                            </Grid>
                            <Grid x:Name="Grid_Summary_Command" Visibility="Collapsed" Margin="8">
                                <RichTextBox x:Name="RichTextBox_CommandPreview" 
                                         Grid.Row="1"
                                         Grid.RowSpan="4"
                                         Grid.Column="1"
                                         Grid.ColumnSpan="2"       
                                         HorizontalAlignment="Stretch"
                                         VerticalAlignment="Stretch"
                                         IsReadOnly="True"/>
                            </Grid>
                        </Grid>
                    </GroupBox>

                    
                    <!-- Sidebar options -->

                    <GroupBox Grid.Row="1"
                              Grid.RowSpan="7"
                              Grid.Column="3"
                              Header="Options">
                        <Grid Margin="8">
                            <!-- TODO: Define grid = 4 parts ? -->
                            <StackPanel Orientation="Vertical">
                                <Button HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0,26,0,0"
                                    Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <ContentPresenter Content="{TemplateBinding Content}"/>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <Image Source="pack://application:,,,/Resources/Images/index.png" />
                                </Button>

                                <Button HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Cursor="Hand"
                                    Margin="0,52,0,0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <ContentPresenter Content="{TemplateBinding Content}"/>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <!-- Name="Play_Image" -->
                                    <Image 
                               Source="pack://application:,,,/Resources/Images/play_darker.png" />
                                </Button>

                            </StackPanel>
                        </Grid>
                        
                    </GroupBox>
                    
                    <!--<Button Grid.Row="1"
                            Grid.Column="3"
                            Margin="8,8,8,0"
                            VerticalAlignment="Bottom"
                            Height="72"
                            Content="?"/>

                    <StackPanel Grid.Row="3"
                                Grid.Column="3"
                                VerticalAlignment="Center"
                                Margin="0,12,0,0"
                                Orientation="Vertical">
                        <Button Margin="0,0,0,12" Height="56" Content="1"/>
                        <Button Margin="0,0,0,12" Height="56" Content="2"/>
                        <Button Margin="0,0,0,12" Height="56" Content="3"/>
                        <Button Margin="0,0,0,12" Height="56" Content="4"/>
                        <Button Margin="0,0,0,12" Height="56" Content="5"/>
                    </StackPanel>-->

                    <Button Grid.Row="5"
                            Grid.Column="3"
                            Margin="0,10,0,1"
                            Content="!"/>

                    <!--<StackPanel Grid.Row="7"
