<Window x:Class="Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThisIsADoomLauncher"
        mc:Ignorable="d"
        
        Title="This is a Doom Launcher v3" 
        Width="1200" Height="884" 
        ResizeMode="CanMinimize"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="Label_SummaryEntries" TargetType="{x:Type Label}">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,-1,0,0"/>
        </Style>
        
        
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="19*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="63*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="32*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="18*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Row="1"
                    Grid.Column="1"
                    Header="Port">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <TextBox 
                    x:Name="TextBox_Port"
                    Grid.Column="0"
                    Margin="0,0,0,1"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Foreground="Gray"
                    FontStyle="Italic"
                    Text="Drop port executable... (GZDoom, Zandronum, etc.)"
                    Cursor="Arrow"
                    IsReadOnly="True"
                    AllowDrop="True"
                    PreviewDragOver="TextBox_Port_PreviewDragOver"
                    Drop="TextBox_Port_Drop"
                    TextWrapping="Wrap"
                    />
                <Grid Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,0,0,1"
                        >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Button 
                        x:Name="Button_Port_Browse"
                        Grid.Row="0"
                        VerticalAlignment="Top"
                        Margin="0,0,0,-1"
                        Content="Browse..."
                        IsEnabled="False"
                        />
                    <Button 
                        x:Name="Button_Port_Clear"
                        Grid.Row="1"
                        VerticalAlignment="Bottom"
                        Content="Clear &#x21ba;"
                        Click="Button_Port_Clear_Click"
                        />
                </Grid>
                <StackPanel x:Name="StackPanel_PortParams"
                            Grid.Row="1"
                            Orientation="Horizontal"/>
                <TextBox x:Name="TextBox_PortParameters"
                            Grid.Row="1"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Text="+ 0 parameters"
                            Cursor="Arrow"
                            IsReadOnly="True"/>
                <Button x:Name="Button_EngineParams_Edit"
                        Grid.Row="1"
                        Grid.Column="1"
                        Content="Edit..."
                        IsEnabled="False"
                        />
            </Grid>
        </GroupBox>

        <!-- Levels -->
        <GroupBox x:Name="GroupBox_Levels"
                    Grid.Row="3"
                    Grid.Column="1"
                    Header="Levels"
                    AllowDrop="True"
                    PreviewDragOver="GroupBox_Levels_PreviewDragOver"
                    Drop="GroupBox_Levels_Drop">
            <Grid>
                <TabControl x:Name="TabControl_Levels" Margin="8">
                    <!-- Add Name ? -->
                    <TabItem Header="Base presets">

                        <Grid>
                            <!--<Grid.RowDefinitions>
                                <RowDefinition Height="10" />
                                <RowDefinition Height="5*" />
                                <RowDefinition Height="10" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="8*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="14*" />
                                <ColumnDefinition Width="10" />
                            </Grid.ColumnDefinitions>-->


                            <!--Grid.Row="0"
                                Grid.Column="0"
                                Grid.RowSpan="3"
                                Grid.ColumnSpan="2"-->
                            <ListView 
                                x:Name="ListView_Levels_BasePresets"
                                            
                                Margin="-3"
                                SelectionChanged="ListView_Levels_BasePresets_SelectionChanged"
                                >
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image 
                                                Source="{Binding ImagePath,Converter={StaticResource ImgConverter}}"
                                                Margin="-3,0,0,0"
                                                Height="64"
                                                />
                                            <TextBlock
                                                Margin="8,0,0,0"
                                                VerticalAlignment="Center"
                                                FontWeight="DemiBold"
                                                FontSize="16"
                                                Text="{Binding Name}"
                                                />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                        </Grid>
                    </TabItem>
                    <TabItem Header="User presets" IsEnabled="False">
                        <Grid>
                            <Label x:Name="Label_Levels_NoUserPresets"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    Foreground="Gray"
                                    Content="No user presets found"/>
                            <ListView x:Name="ListView_Levels_UserPresets"
                                        SelectionChanged="ListView_Levels_UserPresets_SelectionChanged"
                                        Margin="-3"
                                        Visibility="Collapsed">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Add new preset" IsEnabled="False">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="12*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="1"
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="Iwad :"/>
                            <TextBox 
                                x:Name="TextBox_NewLevel_Iwad"
                                Grid.Row="1"
                                Grid.Column="2"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Cursor="Arrow"
                                IsReadOnly="True"
                                FontStyle="Italic"
                                Foreground="Gray"
                                Text="Drop an IWAD file here..."
                                AllowDrop="True"
                                PreviewDragOver="TextBox_NewLevel_Iwad_PreviewDragOver"
                                Drop="TextBox_NewLevel_Iwad_Drop"
                                />
                            <Button Grid.Row="1" 
                                    Grid.Column="3"
                                    VerticalAlignment="Top" 
                                    Content="Browse..."/>
                            <!--<Button Grid.Row="1" 
                                    Grid.Column="3"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" 
                                    Content="->"/>-->
                            <Button 
                                x:Name="Button_NewLevel_Iwad_Clear"
                                Grid.Row="1" 
                                Grid.Column="3"
                                VerticalAlignment="Bottom" 
                                Content="Clear &#x21ba;"
                                Click="Button_NewLevel_Iwad_Clear_Click"
                                />

                            <Label Grid.Row="3"
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="Level :"/>
                            <TextBox x:Name="TextBox_NewLevel_Level"
                                        Grid.Row="3" 
                                        Grid.Column="2"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Cursor="Arrow"
                                        IsReadOnly="True"
                                        FontStyle="Italic"
                                        Foreground="Gray"
                                        Text="Drop a .wad/.pk3 file here..."
                                        AllowDrop="True"
                                        PreviewDragOver="TextBox_NewLevel_Level_PreviewDragOver"
                                        Drop="TextBox_NewLevel_Level_Drop"
                                        />
                            <Button Grid.Row="3" 
                                    Grid.Column="3"
                                    VerticalAlignment="Top" 
                                    Content="Browse..."/>
                            <!--<Button Grid.Row="3" 
                                    Grid.Column="3"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" 
                                    Content="->"/>-->
                            <Button 
                                x:Name="Button_NewLevel_Level_Clear"
                                Grid.Row="3"
                                Grid.Column="3"
                                VerticalAlignment="Bottom"
                                Content="Clear &#x21ba;"
                                Click="Button_NewLevel_Level_Clear_Click"
                                />

                            <Label Grid.Row="5"
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="Misc. :"/>
                            <TextBox x:Name="TextBox_NewLevel_Misc"
                                        Grid.Row="5" 
                                        Grid.Column="2"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Cursor="Arrow"
                                        IsReadOnly="True"
                                        FontStyle="Italic"
                                        Foreground="Gray"
                                        Text="Drop a .deh/.bex file here..."
                                        AllowDrop="True"
                                        PreviewDragOver="TextBox_NewLevel_Misc_PreviewDragOver"
                                        Drop="TextBox_NewLevel_Misc_Drop"
                                        />
                            <Button Grid.Row="5" 
                                    Grid.Column="3"
                                    VerticalAlignment="Top" 
                                    Content="Browse..."/>
                            <!--<Button Grid.Row="5" 
                                    Grid.Column="3"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" 
                                    Content="->"/>-->
                            <Button 
                                x:Name="Button_NewLevel_Misc_Clear"
                                Grid.Row="5"
                                Grid.Column="3"
                                VerticalAlignment="Bottom"
                                Content="Clear &#x21ba;"
                                Click="Button_NewLevel_Misc_Clear_Click"
                                />

                            <Label Grid.Row="7"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="Image :"/>
                            <!--<TextBox Grid.Row="7" 
                                        Grid.Column="2"
                                        Margin="50,0,50,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        FontStyle="Italic"
                                        Foreground="Gray"
                                        Text="Enter preset name..."/>-->
                            <TextBox 
                                x:Name="TextBox_NewLevel_Image"
                                Grid.Row="7" 
                                Grid.Column="2"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Cursor="Arrow"
                                IsReadOnly="True"
                                FontStyle="Italic"
                                Foreground="Gray"
                                Text="Drop a .jpg/.png file here..."
                                AllowDrop="True"
                                PreviewDragOver="TextBox_NewLevel_Image_PreviewDragOver"
                                Drop="TextBox_NewLevel_Image_Drop"     
                                />
                            <Button Grid.Row="7" 
                                    Grid.Column="3"
                                    VerticalAlignment="Top" 
                                    Content="Browse..."/>
                            <!--<Button Grid.Row="7" 
                                    Grid.Column="3"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" 
                                    Content="->"/>-->
                            <Button 
                                x:Name="Button_NewLevel_Image_Clear"
                                Grid.Row="7"
                                Grid.Column="3"
                                VerticalAlignment="Bottom"
                                Content="Clear &#x21ba;"
                                Click="Button_NewLevel_Image_Clear_Click"
                                />

                            <Label Grid.Row="9"
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="Options :"/>
                            <Grid Grid.Row="9"
                                    Grid.Column="2"
                                    Margin="150,0,150,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <Button 
                                    x:Name="Button_NewLevel_Try" 
                                    Grid.Column="0"
                                    Margin="6,0,6,0"
                                    FontSize="13"
                                    Content="Try  &#x2193;"
                                    Click="Button_NewLevel_Try_Click"
                                    />
                                <Button 
                                    x:Name="Button_NewLevel_SaveAs"
                                    Grid.Column="1"
                                    Margin="6,0,6,0"
                                    FontSize="13"
                                    Content="Save as...  &#x1f5ab;"
                                    Click="Button_NewLevel_SaveAs_Click"
                                    />
                                <Button 
                                    x:Name="Button_NewLevel_ClearAll"
                                    Grid.Column="2"
                                    Margin="6,0,6,0"
                                    FontSize="13"
                                    Content="Clear all  &#x21ba;"
                                    Click="Button_NewLevel_ClearAll_Click"
                                    />

                            </Grid>
                        </Grid>

                    </TabItem>
                </TabControl>

            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="5"
                    Grid.Column="1"
                    Header="Mods">
            <Grid Margin="8">
                <TabControl x:Name="TabControl_Mods">
                    <TabItem Header="Base presets">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10" />
                                <RowDefinition Height="4*" />
                                <RowDefinition Height="18*" />
                                <RowDefinition Height="10" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="8*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="15*" />
                                <ColumnDefinition Width="10" />
                            </Grid.ColumnDefinitions>
                            <ListView 
                                x:Name="ListView_Mods_BasePresets"
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.RowSpan="4"
                                Grid.ColumnSpan="2"
                                Margin="-3"
                                SelectionChanged="ListView_Mods_BasePresets_SelectionChanged"
                                >
                                <!-- Use templates to bind -->
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <!--<StackPanel
                                            x:Name="StackPanel_Mods"
                                            Orientation="Vertical"
                                            >-->
                                        <TextBlock
                                                VerticalAlignment="Center"
                                                FontWeight="DemiBold"
                                                FontSize="13"
                                                Text="{Binding Name}"
                                                />
                                        <!--</StackPanel>-->
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <Label 
                                x:Name="Label_Mods_Desc"
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="3"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,-2,0,0"
                                Content="Description :"
                                />
                            <TextBlock
                                x:Name="TextBlock_Mods_Desc"
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="5"
                                Grid.ColumnSpan="2"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Margin="6,-1,0,0"
                                FontWeight="DemiBold"
                                />

                            <Label 
                                x:Name="Label_Mods_Files"
                                Grid.Row="2"
                                Grid.Column="3"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,-2,0,0"
                                Content="Mod files :"
                                />
                            <ListView
                                x:Name="ListView_Mods_Files"
                                Grid.Row="2"
                                Grid.RowSpan="2"
                                Grid.Column="5"
                                Grid.ColumnSpan="2"
                                Margin="0,0,0,0"
                                BorderBrush="LightGray"
                                FontSize="11"
                                IsManipulationEnabled="False"
                                >
                            </ListView>
                        </Grid>
                    </TabItem>
                    <TabItem Header="User presets" IsEnabled="False">
                        <Grid>
                            <Label x:Name="Label_Mods_NoUserPresets"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    Foreground="Gray"
                                    Content="No user presets found"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Add new preset" IsEnabled="False">

                    </TabItem>
                </TabControl>
                <!--<Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="18*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Border BorderThickness="1"
                        BorderBrush="DarkGray">
                    <StackPanel x:Name="StackPanel_Mods"
                            Orientation="Horizontal">

                    </StackPanel>
                </Border>
                <Button x:Name="Button_ModInfo"
                        Grid.Column="1"
                        Content="Get more info..."/>
                <Border Grid.Row="1"
                        BorderThickness="1"
                        BorderBrush="DarkGray">
                                
                </Border>-->
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="7"
                    Grid.Column="1"
                    Header="Summary">
            <Grid>
                <Grid x:Name="Grid_Summary" 
                        Visibility="Visible"
                        >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="10" />
                    </Grid.ColumnDefinitions>

                    <Label Style="{StaticResource Label_SummaryEntries}"
                           Grid.Row="1" Grid.Column="1" Content="Port :"
                           />
                    <TextBox 
                        x:Name="TextBox_Summary_Port" 
                        Grid.Row="1"
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Margin="0,1,0,0"
                        Cursor="Arrow"
                        IsReadOnly="True"
                        AllowDrop="False"
                        />

                    <Label Style="{StaticResource Label_SummaryEntries}"
                           Grid.Row="2" Grid.Column="1" Content="Params :"
                           />
                    <StackPanel 
                        x:Name="StackPanel_Summary_PortParameters"
                        Grid.Row="4" 
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Margin="0,1,0,0"
                        Orientation="Horizontal"
                        />
                    <!--<TextBox Grid.Row="2" 
                            Grid.Column="2"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Margin="0,1,0,0"
                            Cursor="Arrow"
                            IsReadOnly="True"/>-->

                    <Label Style="{StaticResource Label_SummaryEntries}"
                           Grid.Row="3" Grid.Column="1" Content="Iwad :"
                           />
                    <TextBox
                        x:Name="TextBox_Summary_Iwad"
                        Grid.Row="3" 
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Margin="0,1,0,0"
                        Cursor="Arrow"
                        IsReadOnly="True"
                        />

                    <Label Style="{StaticResource Label_SummaryEntries}"
                           Grid.Row="4" Grid.Column="1" Content="File(s) :"
                           />
                    <StackPanel 
                        x:Name="StackPanel_Summary_FilesMods"
                        Grid.Row="4" 
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Margin="0,1,0,0"
                        Orientation="Horizontal"
                        />
                </Grid>
                <Grid 
                    x:Name="Grid_Command" 
                    Visibility="Collapsed" 
                    Margin="8"
                    >
                    <RichTextBox x:Name="RichTextBox_Command" 
                                Grid.Row="1"
                                Grid.RowSpan="4"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"       
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                IsReadOnly="True"/>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Sidebar options -->
        <GroupBox Grid.Row="1"
                  Grid.RowSpan="7"
                  Grid.Column="3"
                  Header="Options">
            <Grid>
                <StackPanel Orientation="Vertical">
                    <Button x:Name="Button_Options_HelpAbout"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0 28 0 0"
                            Cursor="Hand"
                            Padding="6"
                            Content="Help / About"
                            Click="Button_Options_HelpAbout_Click"
                            />
                    
                    <Button x:Name="Button_Options_OpenRootDir"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0 200 0 0"
                            Cursor="Hand"
                            Padding="6"
                            Content="Open root dir"
                            Click="Button_Options_OpenRootDir_Click"
                            />
                    <Button x:Name="Button_Options_MoreContents"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0 10 0 0"
                            Cursor="Hand"
                            Padding="6"
                            Content="DoomWorld"
                            IsEnabled="False"
                            />

                    <Button x:Name="Button_Options_ToogleSummary"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0 370 0 0"
                            Cursor="Hand"
                            Padding="6"
                            Content="Toogle views"
                            Click="Button_Options_ToggleView_Click"
                            />
                    <Button x:Name="Button_Options_Play"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0 10 0 20"
                            Cursor="Hand"
                            Padding="6"
                            Background="#c6ecc6"
                            Content="Save &amp; Play"
                            Click="Button_Options_LaunchSave_Click"
                            />
                </StackPanel>
                <!--<Grid.RowDefinitions>
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="63*" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="44*" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="24*" />
                </Grid.RowDefinitions>
                <Button 
                    x:Name="Button_Options_HelpAbout"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Cursor="Hand"
                    Click="Button_Options_HelpAbout_Click"
                    >
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="pack://application:,,,/Resources/Images/index.png" />
                </Button>

                <Button
                    x:Name="Button_TestMySettings_Check"
                    Grid.Row="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Height="46"
                    Content="Settings"
                    Click="Button_TestMySettings_Check_Click"
                    Visibility="Visible"
                    />

                <Button
                    x:Name="Button_TestMySettings_Reset"
                    Grid.Row="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,80"
                    Height="46"
                    Content="-> Reset"
                    Click="Button_TestMySettings_Reset_Click"
                    Visibility="Visible"
                    />

                <Grid Grid.Row="6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Button 
                        x:Name="Button_ToggleSummaryView"
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="32"
                        Content="&#x1F441;"
                        Cursor="Hand"
                        ToolTip="Toogle view"
                        Click="Button_Options_ToggleView_Click"
                        />
                    <Button
                        x:Name="Button_Options_LaunchSave"
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        ToolTip="Play and Save"
                        Click="Button_Options_LaunchSave_Click"
                        >
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter Content="{TemplateBinding Content}"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Image Source="pack://application:,,,/Resources/Images/play_darker.png" />
                    </Button>
                </Grid>-->
            </Grid>
        </GroupBox>

        <!--<Button Grid.Row="1"
                Grid.Column="3"
                Margin="8,8,8,0"
                VerticalAlignment="Bottom"
                Height="72"
                Content="?"/>

        <StackPanel Grid.Row="3"
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Margin="0,12,0,0"
                    Orientation="Vertical">
            <Button Margin="0,0,0,12" Height="56" Content="1"/>
            <Button Margin="0,0,0,12" Height="56" Content="2"/>
