<Window x:Class="Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThisIsADoomLauncher"
        mc:Ignorable="d"
        
        Title="This is a Doom Launcher v2" 
        Width="800" Height="600" 
        ResizeMode="CanMinimize"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="30*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="13*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <TabControl Grid.Row="1"
                    Grid.Column="1"
                    BorderThickness="2"
                    Margin="2,0,2,0"
                    SelectionChanged="TabControl_SelectionChanged">
            
            <TabItem Name="Common"  
                     Header="Common presets">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="9*" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0"
                           Grid.Column="0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="DemiBold"
                           FontSize="15"
                           Content="Common presets"
                           />

                    <Border Grid.Row="1"
                            BorderBrush="Silver"
                            BorderThickness="1"
                            Margin="16,0,16,16">
                        <Grid>
                            <ListView x:Name="ListView_CommonPresets"
                                      SelectionChanged="ListView_CommonPresets_SelectionChanged">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">

                                            <Image Source="pack://application:,,,/Resources/Images/icon-doom-128.png" Height="26" />
                                            <TextBlock Margin="6,0,0,0"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding Name}"/>

                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>

                            </ListView>
                        </Grid>
                    </Border>

                </Grid>
            </TabItem>

            <TabItem Name="User" 
                     Header="User presets">

                <Grid x:Name="Grid_DisplayUserPresets">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="9*" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0"
                           Grid.Column="0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="DemiBold"
                           FontSize="15"
                           Content="User presets"
                           />

                    <Border Grid.Row="1"
                            BorderBrush="Silver"
                            BorderThickness="1"
                            Margin="16,0,16,16">
                        <Grid>
                            <Label x:Name="Label_NoUserPresetsFound"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="24"
                                   Foreground="Gray"
                                   Content="No presets found ..."
                                   />

                            <ScrollViewer x:Name="ScrollViewer_DisplayUserPresets">
                                
                                <!-- Use ListBox instead ? -->
                                <StackPanel x:Name="StackPanel_UserPresets"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            />
                                
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Name="New" 
                     Header="Add new preset">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="9*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0"
                           Grid.Column="0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="DemiBold"
                           FontSize="15"
                           Content="New user preset"
                           />

                    <Border Grid.Row="1"
                            BorderBrush="Silver"
                            BorderThickness="1"
                            Margin="16,0,16,16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="10"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="10"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="1"
                                   Grid.RowSpan="2"
                                   Grid.Column="1"
                                   Grid.ColumnSpan="2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="DemiBold"
                                   Content="IWAD :"
                                   />
                            <Button x:Name="Button_NewPreset_SetDoomIwad"
                                    Grid.Row="1"
                                    Grid.RowSpan="2"
                                    Grid.Column="3"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Stretch" 
                                    VerticalAlignment="Stretch"
                                    Margin="0,0,1,0"
                                    Background="Transparent"
                                    Content="Ultimate Doom"
                                    />
                            <Button x:Name="Button_NewPreset_SetDoom2Iwad"
                                    Grid.Row="1"
                                    Grid.RowSpan="2"
                                    Grid.Column="5"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Stretch" 
                                    VerticalAlignment="Stretch"
                                    Margin="1,0,1,0"
                                    Background="Transparent"
                                    Content="Doom 2"
                                    />
                            <Button x:Name="Button_NewPreset_SetFreedoomIwad"
                                    Grid.Row="1"
                                    Grid.RowSpan="2"
                                    Grid.Column="7"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Stretch" 
                                    VerticalAlignment="Stretch"
                                    Margin="1,0,1,0"
                                    Background="Transparent"
                                    Content="Freedoom"
                                    />
                            <Button x:Name="Button_NewPreset_SetFreedoom2Iwad"
                                    Grid.Row="1"
                                    Grid.RowSpan="2"
                                    Grid.Column="9"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Stretch" 
                                    VerticalAlignment="Stretch"
                                    Margin="1,0,1,0"
                                    Background="Transparent"
                                    Content="Freedoom 2"
                                    />

                            <Label Grid.Row="4"
                                   Grid.RowSpan="3"
                                   Grid.Column="1"
                                   Grid.ColumnSpan="2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="DemiBold"
                                   Content="Level :"
                                   />
                            <TextBox x:Name="TextBox_DropWadFile"
                                     Grid.Row="4"
                                     Grid.RowSpan="3"
                                     Grid.Column="3"
                                     Grid.ColumnSpan="8"
                                     HorizontalAlignment="Stretch" 
                                     VerticalAlignment="Stretch"
                                     Background="Transparent"
                                     TextWrapping="Wrap"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontStyle="Italic"
                                     Foreground="DarkGray"
                                     Text="Drop a .wad/.pk3 file here ..."
                                     Cursor="Arrow"
                                     IsReadOnly="True" 
                                     PreviewDragOver="TextBox_DropWadFile_PreviewDragOver"
                                     AllowDrop="True" 
                                     Drop="TextBox_DropWadFile_Drop"
                                     />
                            
                            <Label Grid.Row="8"
                                   Grid.RowSpan="3"
                                   Grid.Column="1"
                                   Grid.ColumnSpan="2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="DemiBold"
                                   Content="Misc. :"
                                   />
                            <TextBox x:Name="TextBox_DropMiscFile"
                                     Grid.Row="8"
                                     Grid.RowSpan="3"
                                     Grid.Column="3"
                                     Grid.ColumnSpan="8"
                                     HorizontalAlignment="Stretch" 
                                     VerticalAlignment="Stretch"
                                     Background="Transparent"
                                     TextWrapping="Wrap"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontStyle="Italic"
                                     Foreground="DarkGray"
                                     Text="Drop a .deh/.bex file here ..."
                                     Cursor="Arrow"
                                     IsReadOnly="True" 
                                     PreviewDragOver="TextBox_DropMiscFile_PreviewDragOver"
                                     AllowDrop="True" 
                                     Drop="TextBox_DropMiscFile_Drop"
                                     />

                            <Label Grid.Row="12"
                                   Grid.RowSpan="2"
                                   Grid.Column="1"
                                   Grid.ColumnSpan="2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="DemiBold"
                                   Content="Name :"
                                   />
                            <TextBox x:Name="TextBox_NewPreset_Name" 
                                     Grid.Row="12"
                                     Grid.RowSpan="2"
                                     Grid.Column="5"
                                     Grid.ColumnSpan="4"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Stretch"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontStyle="Italic"
                                     Foreground="DarkGray"
                                     Text="Enter preset name ..."
                                     />

                            <Label Grid.Row="15"
                                   Grid.RowSpan="2"
                                   Grid.Column="1"
                                   Grid.ColumnSpan="2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="DemiBold"
                                   Content="Options :"
                                   />
                            <Button x:Name="Button_NewPreset_Try"
                                    Grid.Row="15"
                                    Grid.RowSpan="2"
                                    Grid.Column="4"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Stretch" 
                                    VerticalAlignment="Stretch"
                                    Margin="1"
                                    Content="Try  &#x2193;"
                                    />
                            <Button x:Name="Button_NewPreset_Reset"
                                    Grid.Row="15"
                                    Grid.RowSpan="2"
                                    Grid.Column="6"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Stretch" 
                                    VerticalAlignment="Stretch"
                                    Margin="1"
                                    Content="Reset  &#x21ba;"
                                    />
                            <Button x:Name="Button_NewPreset_Save"
                                    Grid.Row="15"
                                    Grid.RowSpan="2"
                                    Grid.Column="8"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Stretch" 
                                    VerticalAlignment="Stretch"
                                    Margin="1"
                                    Content="Save  &#x1f5ab;"
                                    />
                        </Grid>

                    </Border>
                </Grid>
            </TabItem>

        </TabControl>


        <GroupBox Grid.Row="3"
                  Grid.Column="1"
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Stretch"
                  BorderBrush="DarkGray" 
                  BorderThickness="2"
                  >
            <GroupBox.Header>
                <TextBlock 
                    Text="Launch parameters"
                    FontWeight="DemiBold"
                    />
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="6*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="30*" />
                    <ColumnDefinition Width="30*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Row="1"
                       Grid.Column="1"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Content="IWAD :"
                       />
                <TextBox x:Name="TextBox_IwadToLaunch"
                         Grid.Row="1"
                         Grid.Column="3"
                         Grid.ColumnSpan="2"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         Cursor="Arrow"
                         IsReadOnly="True"
                         />
                <Label Grid.Row="2"
                       Grid.Column="1"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Margin="0,0,0,0"
                       Content="Level :"
                       />
                <TextBox x:Name="TextBox_LevelToLaunch"
                         Grid.Row="2"
                         Grid.Column="3"
                         Grid.ColumnSpan="2"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         Cursor="Arrow"
                         IsReadOnly="True"
                         />
                <Label Grid.Row="3" 
                       Grid.Column="1" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Content="Misc. :" 
                       />
                <TextBox x:Name="TextBox_MiscToLaunch"
                         Grid.Row="3"
                         Grid.Column="3"
                         Grid.ColumnSpan="2"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         Cursor="Arrow"
                         IsReadOnly="True"
                         />
                <Label Grid.Row="4" 
                       Grid.Column="1" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Content="Extra :" 
                       />
                <CheckBox x:Name="CheckBox_UseAltSoundtrack"
                          Grid.Row="4"
                          Grid.Column="3"
                          HorizontalAlignment="Left" 
                          VerticalAlignment="Center"
                          VerticalContentAlignment="Center"
                          Content="Alternative soundtrack ->" 
                          />
                <RadioButton x:Name="RadioButton_Soundtrack_DoomMetal"
                             Grid.Row="4"
                             Grid.Column="3"
                             HorizontalAlignment="Right" 
                             VerticalAlignment="Center"
                             Margin="0,0,-8,0"
                             VerticalContentAlignment="Center"
                             Foreground="LightGray"
                             Content="Doom Metal v4"
                             IsEnabled="False"
                             />
                <RadioButton x:Name="RadioButton_Soundtrack_IDKFA"
                             Grid.Row="4"
                             Grid.Column="4"
                             HorizontalAlignment="Left" 
                             VerticalAlignment="Center"
                             Margin="18,0,0,0"
                             VerticalContentAlignment="Center"
                             Foreground="LightGray"
                             Content="IDKFA v2 (Doom1)"
                             IsEnabled="False"
                             />

                <!-- TODO : User-selectable amount of turbo -->
                <CheckBox x:Name="CheckBox_EnableTurbo"
                          Grid.Row="4"
                          Grid.Column="4"
                          HorizontalAlignment="Right" 
                          VerticalAlignment="Center"
                          Content="Turbo mode" 
                          />

            </Grid>
        </GroupBox>
        <Border Grid.Row="1"
                Grid.RowSpan="3"
                Grid.Column="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Margin="16,22,0,0"
                BorderBrush="DarkGray"
                BorderThickness="2"
                CornerRadius="6"
                >
            <Grid HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  >
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <!-- Sidebar options -->

                <DockPanel Grid.Row="0"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           >
                    <Button x:Name="Button_Help"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="14"
                            Cursor="Hand"
                            ToolTip="Help"
                            >
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter Content="{TemplateBinding Content}"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Image Name="Help_Image" Source="pack://application:,,,/Resources/Images/index.png" />
                    </Button>
                </DockPanel>

                <DockPanel Grid.Row="1"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           >
                    <Button x:Name="Button_Levels" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="13"
                            Cursor="Hand"
                            ToolTip="Levels"
                            >
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter Content="{TemplateBinding Content}"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Image Name="DoomWorld_Image" Source="pack://application:,,,/Resources/Images/300x50_blackAndWhite_edit_def.gif" />
                    </Button>
                </DockPanel>

                <DockPanel Grid.Row="2"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Margin="0,2,0,0"
                           >
                    <Button x:Name="Button_DoomResources" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="15"
                            Cursor="Hand"
                            ToolTip="Engines and mods"
                            >
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter Content="{TemplateBinding Content}"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Image Name="DommResources_Image" Source="pack://application:,,,/Resources/Images/images_edit.jpg" />
                    </Button>
                </DockPanel>

                <DockPanel Grid.Row="3"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           ToolTip="TiaDL root folder"
                           >
                    <Button x:Name="Button_ExploreFolder" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="16"
                            Cursor="Hand"
                            >
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter Content="{TemplateBinding Content}"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Image Name="Folder_Image" Source="pack://application:,,,/Resources/Images/Folder.png" />
                    </Button>
                </DockPanel>

                <DockPanel Grid.Row="4"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           ToolTip="Settings"
                           >
                    <Button x:Name="Button_Menu_Settings"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="14,16,16,16"
                            Cursor="Hand"
                            >
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter Content="{TemplateBinding Content}"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Image Name="Settings_Image" Source="pack://application:,,,/Resources/Images/settings_darker.png" />
                    </Button>

                </DockPanel>

                <DockPanel Grid.Row="5"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           ToolTip="Play"
                           >
                    <Button x:Name="Button_Launch"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="50" Height="50"
                            Cursor="Hand"
                            Margin="2,0,0,0"
                            >
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter Content="{TemplateBinding Content}"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Image Name="Play_Image" Source="pack://application:,,,/Resources/Images/play_darker.png" />
                    </Button>
                </DockPanel>

            </Grid>
        </Border>
        
        <!--<Button x:Name="Button_TestProperties"
                Content="Properties" 
                Grid.Column="3" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="75"/>-->

        <!--<Button Content="test" 
                Grid.Row="1"
                Grid.Column="1" 
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="75" 
                Height="80"
                Click="Button_Click"/>-->
        
    </Grid>
</Window>
